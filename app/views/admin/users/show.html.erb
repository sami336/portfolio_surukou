<div class="container">
  <div class="row">
   <div class="col-md-4">
    <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle"  %>
    <h5 class="ms-2 profile-name display-5"><%= @user.name %></h5>
      <div class="mt-auto">
       <%= link_to "会員ステータス変更", edit_admin_user_path, class: "btn btn-success" %>
      </div>
   </div>
   <div class="col-md-8">
     <table class="table table-striped">
       <thead>
         <tr>
           <th scope="col">本</th>
           <th scope="col">タイトル</th>
           <th scope="col"></th>
         </tr>
       </thead>
       <tbody>
        <% @posts.each do |post| %>
         <tr>
          <td>
            <%= image_tag post.image_book, size: '100x100' %>
          </td>
          <td><%= link_to post.title ,admin_post_path(post.id) %></td>
         </tr>
        <% end %>
       </tbody>
     </table>
   </div>
  </div>
</div>