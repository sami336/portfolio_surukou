<div class="container">
    <h5>会員ステータス変更</h5>
    <div class="row">
      <div class="form-group">
        <%= form_with url: admin_user_path, method: :patch, local:true do |f| %>
            <%= f.radio_button :user_status, true, class:"m-1" %>
            <%= f.label :user_status, "有効" %>
            <%= f.radio_button :user_status, false, class:"m-1" %>
            <%= f.label :user_status, "退会" %>
        <div class="form-group">
            <%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>
        <% end %>
      </div>
    </div>
</div>