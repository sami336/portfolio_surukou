<div class="container">
  <div class="container">
    <h5>投稿一覧</h5>
      <div class="col-md-8">
     <table class="table table-striped">
       <thead>
         <tr>
           <th scope="col">ユーザー</th>
           <th scope="col">本のタイトル</th>
         </tr>
       </thead>
       <tbody>
        <% @posts.each do |post| %>
         <tr>
          <td>
            <%= link_to post.user.name, admin_user_path(post.user_id) %>
          </td>
          <td>
            <%= link_to post.title, admin_post_path(post.id) %>
          </td>
         </tr>
        <% end %>
       </tbody>
     </table>
   </div>
  </div>
</div>