<div class="container">
  <!--ユーザー名-->
  <div class="row justify-content-center">
    <div class="col-md-6">
    　<%= link_to admin_user_path(@post.user_id), class: "text-dark" do %>
        <span><i class="fas fa-user"></i> <%= @post.user.name %></span>
      <% end %>
    </div>
  </div>
  <!--本のイメージ-->
  <div class="row justify-content-center">
    <div class="border col-md-6 text-center">
      <%= image_tag @post.get_image_book,  width: 100, height: 150, style:"padding: 0; height:300px; width: 200px" %>
    </div>
    </div>
    <!--タイトル-->
    <div class="row justify-content-center">
    <div class="border col-md-6">
      <h4><%= @post.title %></h4>
    </div>
    </div>
  <!--本文-->
    <div class="row justify-content-center">
    <div class="border col-md-6">
      <p><%= @post.body %></p>
    </div>
   </div>
   <!--コメント-->
   <div class="row justify-content-center">
      <div class="col-md-6">
       <% @post.comments.each do |comment| %>
        <div>
          <%= comment.post_comment %>
          <%= link_to "コメント削除", admin_post_comment_path(comment.post, comment), method: :delete %>
        </div>
       <% end %>
    　</div>
    </div>
    <div class="row justify-content-center">
      <div class="form-group col-md-6">
        <%= link_to admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
        <button class="btn btn-danger" type="submit">削除する</button>
        <% end %>
      </div>
    </div>
</div>