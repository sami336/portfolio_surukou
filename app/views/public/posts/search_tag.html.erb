<div class="container">
  <h5>タグが<%=@tag.tag_name%>の投稿一覧</h5>

    <!--タグリスト-->
    <% @tag_list.each do |list|%>
      <%=link_to list.tag_name,search_tag_path(tag_id: list.id) %>
      <%="(#{list.posts.count})" %>
    <% end %>

    <table class="table table-striped">
      <thead>
         <tr>
           <th scope="col">ユーザー</th>
           <th scope="col">タイトル</th>
           <th scope="col"></th>
         </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
         <tr>
            <td>
            　<span><i class="fas fa-user"></i> <%= post.user.name %></span>
          　</td>
          　<td><%= link_to post.title ,post_path(post.id) %></td>
          　<td><i class="fas fa-tag"></i><%= post.tags.map(&:tag_name).join(', ') %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
</div>