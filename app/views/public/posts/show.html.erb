<div class="container">
  <!--本のイメージ-->
  <div class="row justify-content-center">
    <div class="border col-md-6 text-center">
      <%= image_tag @post.get_image_book(90, 100), style:"padding: 0; height:300px; width: 200px" %>
    </div>
    </div>
    <!--タイトル-->
    <div class="row justify-content-center">
    <div class="border col-md-6">
      <h4><%= @post.title %></h4>
    </div>
    </div>
  <!--本文-->
    <div class="row justify-content-center">
    <div class="border col-md-6">
      <p><%= @post.body %></p>
    </div>
    </div>
    <!--いいね-->
    <div class="row justify-content-center">
      <div class="col-md-6">
      <% if @post.favorited_by?(current_user) %>
    <p>
      <%= link_to post_favorites_path(@post), method: :delete do %>
        ♥<%= @post.favorites.count %> いいね
      <% end %>
    </p>
     <% else %>
    <p>
      <%= link_to post_favorites_path(@post), method: :post do %>
        ♡<%= @post.favorites.count %> いいね
      <% end %>
    </p>
     <% end %>
    </div>
   </div>
   <!--コメント-->
   <div class="row justify-content-center">
      <div class="col-md-6">
  　　  　<%= @post.comments %>
  　　　　  <% if @comment.user == current_user %>
     　　　 <%= link_to "削除", post_comment_path(comment.post, comment), method: :delete %>
    　　<% end %>
    　</div>
    </div>
    <div class="row justify-content-center">
     <div class="form-group col-md-6">
        <%= form_with model: [@post, @comment] do |f| %>
        <%= f.text_area :comment, rows: '3', cols: '70', placeholder: "コメントをここに" %>
        <button class="btn btn-primary" type="submit">コメントする</button>
        <% end %>
     </div>
    </div>
  </div>
</div>