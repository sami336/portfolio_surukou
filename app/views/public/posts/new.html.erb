<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">新規投稿フォーム</h3>
      <div class="form-body p-4">
        <%= form_with model: @post, url: '/posts', method: :post do |f| %>
          <%= f.file_field :image_book, accept: "image/*", class: "w-100" %>
         <div class="input-group mb-3 mt-4">
           <div class="input-group-prepend">
            <span class="input-group-text" aria-hidden="true"><i class="fas fa-pen"></i></span>
           </div>
             <%= f.text_field :title, class:"form-control", placeholder:"タイトル"  %>
        	 </div>
             <%= f.text_area :body, class:"form-control", rows:"5", placeholder:"本文をお書きください" %>
             <%= f.text_field :tag_name, value: @tag_list, class:"form-control", placeholder:"タグ（,で区切ると複数タグ登録できます）" %>
        	 <%= f.submit '投稿', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
     </div>
   </div>
</div>