<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">投稿編集フォーム</h3>
      <div class="form-body p-4">
        <%= form_with model:@post, local:true do |f| %>
          <%= f.file_field :image_book, accept: "image/*" %>
         <div class="form-group mb-3 mt-4">
           <%= f.label :"タイトル", class: "col-md-4" %>
           <%= f.text_field :title, class:"form-control" %>
         </div>
        	 <%= f.label :"本文", class: "col-md-4" %>
        	 <%= f.text_area :body, class:"form-control", rows:"5" %>
        	 <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
     </div>
   </div>
</div>