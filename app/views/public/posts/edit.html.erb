<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">投稿編集フォーム</h3>
      <div class="p-2">
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      </div>
      <div class="form-body p-4">
        <%= form_with model:@post, local:true do |f| %>
          <%= f.file_field :image_book, accept: "image/*" %>
         <div class="form-group mb-3 mt-4">
           <%= f.label :"タイトル", class: "col-md-4" %>
           <%= f.text_field :title, class:"form-control" %>
         </div>
        	 <%= f.label :"本文", class: "col-md-4" %>
        	 <%= f.text_area :body, class:"form-control", rows:"5" %>
        	 <%= f.text_field :tag_name, value: @tag_list, class:"form-control", placeholder:"タグ（,で区切ると複数タグ登録できます）" %>
        	 <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
     </div>
   </div>
</div>