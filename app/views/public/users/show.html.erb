<div class="container">
  <div class="row">
   <!--ページ左側の会員プロフィール-->
   <%= render 'profile', user: @user %>

   <div class="col-md-8">
     <table class="table table-striped">
       <thead>
         <tr>
           <th scope="col">本</th>
           <th scope="col">タイトル</th>
           <th scope="col"></th>
         </tr>
       </thead>
       <tbody>
        <% @posts.each do |post| %>
         <tr>
          <td>
            <%= image_tag post.image_book, size: '100x100' %>
          </td>
          <td><%= link_to post.title ,post_path(post.id) %></td>
          <td><i class="fas fa-tag"></i><%= post.tags.map(&:tag_name).join(', ') %></td>
         </tr>
        <% end %>
       </tbody>
     </table>
     <div class="pagination pagination-sm justify-content-center">
     <%= paginate @posts %>
     </div>
   </div>
  </div>
</div>