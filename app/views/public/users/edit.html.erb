<div class="containar">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h3 class="text-dark bg-light p-4 mb-0">会員情報編集</h3>
      <div class="form-body p-4">
        <%= form_with model:@user, local:true do |f| %>
          <%= f.file_field :profile_image, accept: "image/*", class: "w-100" %>
         <div class="form-group mb-3 mt-4">
           <%= f.label :"ニックネーム", class: "col-md-4" %>
           <%= f.text_field :name, class:"form-control name col-md-4" %>
         </div>
        	 <%= f.label :"メールアドレス", class: "col-md-4" %>
        	 <%= f.text_field :email, class:"form-control col-md-4" %>
        	 <%= f.submit '変更を保存', class:"btn btn-lg btn-block btn-info mt-4" %>
        <% end %>
        <%=link_to "退会する", unsubscribe_users_path, class: "btn btn-lg btn-block btn-outline-danger mt-4" %>
     </div>
   </div>
</div>