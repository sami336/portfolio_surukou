<% if @range == "User" %>
  <table class="table table-striped">
     <thead>
       <tr>
           <th scope="col">ユーザー名</th>
           <th scope="col"></th>
       </tr>
     </thead>
     <tbody>
        <tr>
          <td>
            <% @users.each do |user| %>
            <%= link_to user.name, user_path(user.id) %>   　
            <% end %>
          </td>        
        </tr>
     </tbody>
    </table>
<% else %>
  <table class="table table-striped">
     <thead>
       <tr>
           <th scope="col">ユーザー名</th>
           <th scope="col">投稿タイトル</th>
           <th scope="col"></th>
       </tr>
     </thead>
     <tbody>
       <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.name %></td>
          <td><%= link_to post.title, post_path(post.id) %></td>　
       <% end %>
        </tr>
     </tbody>
   </table>
<% end %>